# ============================================
# Indexer Configuration
# ============================================
# Enable/disable the blockchain event indexer
INDEXER_ENABLED=false

# How often to poll for new blocks (in milliseconds)
INDEXER_POLL_INTERVAL=5000

# Block number to start indexing from (0 = genesis, or set to a recent block)
INDEXER_START_BLOCK=0

# Health check server port
HEALTH_PORT=8080
